CREATE TABLE USERS(
    USERNAME CHARACTER(50) PRIMARY KEY,
    PASSWORD CHARACTER(50),
    TYPE CHARACTER(1),
    ESTADO CHARACTER(50),
    CREATED_AT TIMESTAMP
    );

CREATE TABLE PRODUCTOS(
    PRODUCTO CHARACTER(50) PRIMARY KEY,
    ESTADO CHARACTER(50)
	);


INSERT INTO PRODUCTOS VALUES('HERBICIDA','ACTIVO');
INSERT INTO PRODUCTOS VALUES('FUNGICIDA','ACTIVO');
