INSERT INTO PRODUCTOS VALUES('FERTILIZANTE FOLEAR','ACTIVO');


CREATE TABLE CULTIVOS(
    CULTIVO CHARACTER(50) PRIMARY KEY,
    ESTADO CHARACTER(50)
	);

INSERT INTO CULTIVOS VALUES('CANA DE AZUCAR','ACTIVO');
INSERT INTO CULTIVOS VALUES('BANANO','ACTIVO');
INSERT INTO CULTIVOS VALUES('TABACO','ACTIVO');
INSERT INTO CULTIVOS VALUES('PALMA','ACTIVO');

CREATE TABLE SOLICITUD_SERVICIO(
    ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    USERNAME CHARACTER(50),
    FECHA DATE,
    HORA CHARACTER(50),
    CULTIVO CHARACTER(50),
    PRODUCTO CHARACTER(50),
    TYPE_AREA CHARACTER(50),
    AREA FLOAT,
    VOLUMEN FLOAT,
    LATITUD FLOAT,
    LONGITUD FLOAT,
    OBSERVACIONES TEXT,
    CREATED_AT TIMESTAMP,
    ESTADO CHARACTER(50)

);

INSERT INTO SOLICITUD_SERVICIO(USERNAME,FECHA,HORA,CULTIVO,PRODUCTO,TYPE_AREA,AREA,VOLUMEN,LATITUD,LONGITUD,OBSERVACIONES,CREATED_AT) 
VALUES('web','2022-08-25','23:55:55','PALMA','FERTILIZANTE FOLEAR','H','50','3','16.555','16.55556','NINGUNA',NOW());


CREATE TABLE DRONES(
    ALIAS CHARACTER(50) PRIMARY KEY,
    MODELO CHARACTER(50),
    ESTADO CHARACTER(50)    

);


CREATE TABLE PILOTOS(
    NOMBRE CHARACTER(50) PRIMARY KEY,
    APELLIDO CHARACTER(50),
    TELEFONO CHARACTER(50),
    ESTADO CHARACTER(50)    

);


CREATE TABLE COTIZACIONES(
    ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    USERNAME CHARACTER(50),
    FECHA TIMESTAMP,
    TYPE_AREA CHARACTER(50),
    AREA FLOAT,
    VOLUMEN FLOAT,
    LATITUD FLOAT( 10, 6 ) ,
    LONGITUD FLOAT( 10, 6 ),
    PRECIO FLOAT

);


CREATE TABLE DATA_DRON(
    flyer_name	CHARACTER(50),
    place CHARACTER(50),	
    team_name CHARACTER(50),	
    spray_usage	FLOAT,
    nickname CHARACTER(50),	
    new_work_area FLOAT,	
    start_timestamp	TIMESTAMP,
    end_timestamp TIMESTAMP,	
    work_time_seconds FLOAT,	
    mode_name FLOAT,
    work_speed	FLOAT,
    spray_width	 FLOAT,
    radar_height FLOAT,	
    plot_name CHARACTER(50),	
    mission_serial_number CHARACTER(50)

);

CREATE TABLE CITAS(
    ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    USERNAME CHARACTER(50),	
    SOLI_ID INT,	
    FECHA DATE,
    PILOTO CHARACTER(50),
    DRON CHARACTER(50),
    FECHA_INICIO TIMESTAMP,	
    FECHA_FIN TIMESTAMP,
    COMENTARIO TEXT,
    CREATED_AT TIMESTAMP

);

INSERT INTO CITAS(USERNAME,SOLI_ID,FECHA,PILOTO,DRON,FECHA_INICIO,FECHA_FIN,COMENTARIO,CREATED_AT) 
VALUES('web','2','2022-10-16','ROBERTO','DRON1',NULL,NULL,'EN GARITA 2',NOW());

CREATE TABLE IMAGES(
    ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    USERNAME CHARACTER(50),
    NAME_IMG CHARACTER(50),
    BASE_64 MEDIUMBLOB,
    RESULT CHARACTER(50),	
    CREATED_AT TIMESTAMP

);